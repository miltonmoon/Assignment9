@{
    ViewBag.Title = "Add a movie to the collection";
}

@model Assignment3.Models.Movie


<div class="text-center">
    <p>This is where you will enter a new movie to the collection!</p>

    <form asp-action="EnterMovie" method="post">
        <div>
            <label asp-for="Category">Category:</label>
            <input asp-for="Category" />
        </div>

        <div>
            <label asp-for="Name">Title:</label>
            <input asp-for="Name" />
        </div>

        <div>
            <label asp-for="Year">Year:</label>
            <input asp-for="Year" />
        </div>

        <div>
            <label asp-for="Director">Director:</label>
            <input asp-for="Director" />
        </div>

        <div>
            <label asp-for="Rating">Rating:</label>
            <select asp-for="Rating">
                <option value="">Select One</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
                <option value="UR">Unrated</option>
            </select>
        </div>

        <div>
            <label asp-for="Edited">Edited:</label>
            <select asp-for="Edited">
                <option value="false">Select One</option>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>

        <div>
            <label asp-for="LentTo">Lent To:</label>
            <input asp-for="LentTo" />
        </div>

        <div>
            <label asp-for="Notes">Notes:</label>
            <input asp-for="Notes" />
        </div>

        <div asp-validation-summary="All" />

        <button type="submit">Submit Movie</button>

    </form>

</div>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}