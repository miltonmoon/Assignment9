@{
    ViewBag.Title = "Joel Hilton's Movie Collection";
}

@model IQueryable<Movie>

<div class="text-center">
    <p>Here are the Movies currently in Joel Hilton's Movie Collection</p>

</div>
<div class="justify-content-xl-center">
    <table class="table-bordered" style="width:100%">
        <thead>
            <tr>
                <th style="width: 10%">Category</th>
                <th style="width: 30%">Name</th>
                <th style="width: 5%">Year</th>
                <th style="width: 15%">Director</th>
                <th style="width: 10%">Rating</th>
                <th style="width: 5%">Edited</th>
                <th style="width: 10%">Lent To</th>
                <th style="width: 15%">Notes</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Category</td>
                    <td>@x.Name</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating</td>
                    <td>@x.Edited</td>
                    <td>@x.LentTo</td>
                    <td>@x.Notes</td>
                </tr>
            }
        </tbody>
    </table>
</div>
